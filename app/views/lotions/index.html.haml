-# http://www.responsivewebmobile.com/posts/view/2013/06/04/5/Responsive_Pin_Page_templates_free

- model_class = Lotion

%div#lotions{style: "opacity: 0;"}
  = render @lotions

%div#infinite-scrolling
  = will_paginate @lotions

-# = render partial: "list", :locals => {:lotions => @lotions, :show_name => true, :show_hotels => true}

:javascript
  var $container = $('#lotions');
      $container.imagesLoaded(function(){
      $container.animate({opacity: 1});
      $container.masonry({
        lotionSelector : '.lotion',
        columnWidth : 290,
        isAnimated: true
      });
      if ($(document).height() <= $(window).height()) {
        morePaginatedResults();
      }
    });
