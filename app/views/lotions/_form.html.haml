- if @lotion.errors.present?
  = @lotion.errors.full_messages.join("<br />").html_safe
= semantic_form_for @lotion do |f|
  = f.inputs do
    = f.input :name
    = f.input :description
    = f.attachinary_file_field :photos
    = f.input :hotels, :as => :check_boxes
    %h3 Rating
    = rating_for_user @lotion, current_user, "overall", cancel: true, enable_half: true
    %br
    = f.submit
:javascript
  $(document).ready(function(){
    $('.attachinary-input').attachinary();
  });